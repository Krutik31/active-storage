<div class="container-fluid text-center">
  <br>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">

      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th colspan="5"><h3>List of Users</h3></th>
          </tr>
          <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td>
                <%= link_to "View", user_path(user), class:"btn btn-secondary btn-sm" %>
                &nbsp;&nbsp;
                <%= link_to "Edit", edit_user_path(user), class:"btn btn-warning btn-sm" %>
                &nbsp;&nbsp;
                <%= link_to "Destroy", user_path(user), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="justify-content-center">
        <%= link_to "Add new user", new_user_path, class:"btn btn-sm btn-primary" %>
      </div>

    </div>
    <div class="col-2"></div>
  </div>
</div>
