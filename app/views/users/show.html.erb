<div class="container-fluid">
  <br>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">

      <%= link_to "Back", users_path, class:"btn btn-sm btn-danger" %>
      <hr>

      <%= image_tag @user.avatar.variant(:thumb) %>
      <table class="table table-hover table-bordered text-center">
        <tr>
          <th colspan="2"><h3>User details</h3></th>
        </tr>
        <tr>
          <th>Username</th>
          <td><%= @user.username %></td>
        </tr>
        <tr>
          <th>Email</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>Phone</th>
          <td><%= @user.phonenumber %></td>
        </tr>
      </table>
      <br>
    </div>
    <div class="col-2"></div>
  </div>
</div>
